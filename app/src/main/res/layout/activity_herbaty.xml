<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_herbaty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.milek.projektztp.HerbatyActivity">

    <TextView
        android:text="Wybierz syrop:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/rodzaj_herbaty"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Wybierz kulki:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rodzaj_syropu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:id="@+id/textView5" />

    <TextView
        android:text="Wybierz rodzaj herbaty:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <Button
        android:text="Stwórz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stworz"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_below="@+id/rodzaj_kulek"
        android:layout_toRightOf="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stworz"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/kompozycja" />

    <Spinner
        android:entries="@array/rodzaje_herbaty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rodzaj_herbaty"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:entries="@array/rodzaje_syropu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/rodzaj_syropu"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:entries="@array/rodzaje_kulek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rodzaj_kulek"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Koszyk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button_dodaj_do_koszyka"
        android:layout_alignStart="@+id/button_dodaj_do_koszyka"
        android:layout_marginBottom="26dp"
        android:id="@+id/buttonZobaczKoszyk" />

    <Button
        android:text="Dodaj do koszyka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:id="@+id/button_dodaj_do_koszyka"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/buttonZobaczKoszyk"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:enabled="false"/>

    <!--<TextView-->
        <!--android:text="Skomponuj własną herbatę:"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textSize="20dp"-->
        <!--android:id="@+id/textView2"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_toRightOf="@+id/kompozycja"-->
        <!--android:layout_toEndOf="@+id/kompozycja" />-->

    <TextView
        android:text="Skomponuj własną herbatę:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3473A0"
        android:textSize="20dp"
        android:id="@+id/textView2"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_alignParentTop="true"
        />


</RelativeLayout>
